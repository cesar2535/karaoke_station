.App {
  // display flex
  // flex-direction column
  width 100vw
  height 100vh
  overflow hidden
}

.Queue, .Favorites, .History, .Songbook {
  position relative

  &--w620 {
    width 620px
    margin auto
  }
}

.Queue-more, .History-more {
  display block
  background-color alpha(#000, 0.3)
  text-align center
  width 100%
  padding 10px
  box-sizing border-box
}

.Queue-head, .History-head {
  display flex
  background-color alpha(#000, 0.7)
  padding 10px 30px

  & > * {
    flex 1
  }
}
