
$Dot-borderColor = #00b7ee;

$Slider-btn {
  display flex
  justify-content center
  align-items center
  font-size 2em
  width 70px
  position absolute
}

.Slider {
  width 100%
  height 100%
  position relative
}

.Slider-previousBtn {
  @extends $Slider-btn
  top 0
  bottom 0
  left 0
}

.Slider-nextBtn {
  @extends $Slider-btn
  top 0
  right 0
  bottom 0
}

.Slider-dots {
  display flex
  justify-content center
  position absolute
  right 0
  bottom 0
  left 0
}

.Slider-dot {
  width 10px
  height 10px
  border 1px solid $Dot-borderColor
  border-radius 50%
  margin 10px
  transition background-color 0.3s

  &.is-current {
    background-color $Dot-borderColor
  }
}

.Slider-list {
  display flex
  justify-content center
  height 100%
  & > * {
    width 500px
    margin 25px 75px
  }
}
