@css {
  @import 'suitcss-utils-display';
}

.Song {
  display flex
  align-items center
  background-color alpha(#000, 0.7)
  padding 10px 20px
  margin 2px 0

  &:nth-child(odd) {
    background-color alpha(#0a0000, 40%)
  }

  &:hover {
    background-color alpha(#1a748e, 0.3)
  }

  &.is-selected {
    background-color alpha(#1a748e, 0.75)
  }

  &--queue {

  }

  & > * {
    flex 1
    padding 0 10px
  }

  .ic {
    flex 0
    font-size 1.5em
    padding-right 1em
  }
}

