@css {
  @import 'suitcss-utils-display';
}

.ActionPanel {
  display flex
  background-color #000
}

.ActionPanel-btn {
  background-color transparent
  width 80px
  height 80px
  border none
  outline none
  transition-duration 0.3s

  &:before {
    display block
    font-size 1.5em
    padding-bottom 10px
  }

  &:hover {
    background-color alpha(#0f5bb8, 0.5)
  }
}
