/**
* Base styles and any SUIT vars
*/

/**
* Placed in a CSS block so that they are picked up by Rework after
* Stylus compilation
*/
@css {
  @custom-media --sm-viewport (min-width: 36.25em);
  @custom-media --md-viewport (min-width: 49.375em);
  @custom-media --lg-viewport (min-width: 72.1875em);

  @import 'normalize.css';
}

@require "vars";

html {
  box-sizing: border-box;
  font-size: 1rem;
}

body {
  background-color $background-color
  background-image $background-image
  background-position center
  background-size cover
  background-repeat no-repeat
  color: $text-color;
  font-family $font-family
  height 100vh
  overflow hidden
}
