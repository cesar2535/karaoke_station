@css {
  @import "suitcss-utils-display";
}

$Playlist-bgColor = #222222;
$Playlist-color = #fff;

$Playlist-item-bgColor = #000000;

.Playlist {
  display block
  // background-color $Playlist-bgColor
  color $Playlist-color
  width 300px
}

.Playlist-item {
  background-color alpha($Playlist-item-bgColor, 0.7)
  width 100%
  padding 5px 10px
  box-sizing border-box

  &:nth-child(even) {
    background-color alpha($Playlist-item-bgColor, 0.4)
  }

  &--home {
    display flex
    justify-content space-between
  }

  &--artists {
    padding 11px 0 11px 24px
  }
  &:hover {
    background: rgba(126, 0, 67, 0.85);
  }
}

