@css {
  @import "suitcss-utils-display";
}

.HistoryView {
  display flex
  flex-direction column
  align-items center
}

.HistoryView-head {
  display flex
  background-color alpha(#000000, 0.7)
  color #fff
  width 60%
  padding 10px 25px
  margin-bottom 2px
  box-sizing border-box

  & > * {
    flex 1
  }
}

.HistoryView-body {
  width 60%
  height 55vh
  overflow-y scroll
}

.HistoryItem {
  display flex
  background-color alpha(#000000, 0.7)
  width 100%
  padding 10px 25px
  margin-bottom 2px
  box-sizing border-box

  & > * {
    flex 1
  }

  &:nth-child(odd) {
    background-color alpha(#000000, 0.4)
  }

  &:hover {
    background rgba(126, 0, 67, 0.85)
  }
}

