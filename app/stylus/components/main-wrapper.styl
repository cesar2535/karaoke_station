@css {
  @import "suitcss-utils-display";
}

.Main {
  height 91vh
  padding-top 63px
  box-sizing border-box

  &--home {
    position relative
  }

  &--playlist {
    display flex
  }

  &--songbook {
    display flex
  }
}

.Main-prev {
  font-size 2em
  font-weight bold
  position absolute
  left 20px
  top 50%
}

.Main-next {
  font-size 2em
  font-weight bold
  position absolute
  right 20px
  top 50%
}

.Main-nav {
  text-align center
  margin-top 10px
  & > div {
    display inline-block
    width 5px
    height 5px
    padding 10px
    border 1px solid #e7007f
    border-radius 50%
    margin 0px 10px
  }
}

.Main-wrapper {
  // height 100%
  &--home {
    display flex
    justify-content center
  }

  &--playlist {
    flex 1
    position relative
  }

  &--songbook {
    flex 1
  }
}

.Main-wrapper-playlist {
  width 480px
  height 100%
  padding 0px 20px
  & > h1 {
    color #fff
  }
}

.Main-wrapper-favorites {
  width 480px
  padding 0px 20px
  & > h1 {
    color #fff
  }
}

.Main-wrapper-title {
  color #fff
  font-size 1.8em
  text-transform capitalize
  margin 10px 20px
}
