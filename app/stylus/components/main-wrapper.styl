@css {
  @import "suitcss-utils-display";
}

$Main-wrapper-component {
  width 480px
  height 100%
  padding 0px 20px

  .ic {
    padding-right 10px
  }

  h1 a {
    color #fff
  }
}

.Main {
  height 91vh
  padding-top 63px
  box-sizing border-box

  &--home {
    position relative
    display flex
    flex-direction column
  }

  &--playlist {
    display flex
  }

  &--songbook {
    display flex
  }

  &--history {
    display flex
  }
}

.Main-prev {
  font-size 2em
  font-weight bold
  position absolute
  left 20px
  top 50%
}

.Main-next {
  font-size 2em
  font-weight bold
  position absolute
  right 20px
  top 50%
}

.Main-nav {
  text-align center
  margin-top 10px
  & > div {
    display inline-block
    width 10px
    height 10px
    border 1px solid #e7007f
    border-radius 50%
    margin 0px 10px
  }
}

.Main-wrapper {
  // height 100%
  &--home {
    display flex
    justify-content center
    flex 1
  }

  &--playlist {
    flex 1
    position relative
  }

  &--songbook {
    flex 1
    height 100%
  }

  &--history {
    flex 1
    position relative
  }
}

.Main-wrapper-songbook {
  @extends $Main-wrapper-component
}

.Main-wrapper-playlist {
  @extends $Main-wrapper-component
}

.Main-wrapper-favorites {
  @extends $Main-wrapper-component
}

.Main-wrapper-title {
  font-size 1.8em
  text-transform capitalize
  margin 10px 20px
}
