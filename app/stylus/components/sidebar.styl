@css {
  @import "suitcss-utils-display";
}

.SideBar {
    width: 100px;
    height: 100%;
    position: fixed;
    left: 0;
    background: -webkit-linear-gradient(#35024d, #c92a84);
    background: -o-linear-gradient(#35024d, #c92a84);
    background: -moz-linear-gradient(#35024d, #c92a84);
    background: linear-gradient(#35024d, #c92a84);

}

.SideBarItem {
    height: 49px
    font-size: 1.8em;
    text-align: center;
    padding: 20px;
    color: #fff;
    p {
        width: 62px
        margin-top: -0.1em;
        font-size: 0.4em;
        letter-spacing: 2px;
        color: #fff;
    }
    a {
        color: #fff;
    }
}
